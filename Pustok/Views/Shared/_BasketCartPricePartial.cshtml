@model IEnumerable<BasketVM>

@if (Model != null && Model.Count() > 0)
{
    <div class="cart-summary">
        <div class="cart-summary-wrap">
            <h4><span>Cart Summary</span></h4>
            <p>Sub Total <span class="text-primary">$@(Model.Sum(b => b.Price * b.Count))</span></p>
            <p>ExTax <span class="text-primary">$@Model.Sum(b => b.ExTax)</span></p>
            <h2>Grand Total <span class="text-primary">$@(Model.Sum(b => b.Price * b.Count + b.Count * b.ExTax))</span></h2>
        </div>
        <div class="cart-summary-button">
            <a href="checkout.html" class="checkout-btn c-btn btn--primary">Checkout</a>
            <button class="update-btn c-btn btn-outlined">Update Cart</button>
        </div>
    </div>
}
