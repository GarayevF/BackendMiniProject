@model List<BasketVM>

<div class=" single-cart-block ">
    @foreach (BasketVM basketVM in Model)
    {
        <div class="cart-product">
            <a href="product-details.html" class="image">
                <img src="~/assets/images/product/@basketVM.Image" alt="">
            </a>
            <div class="content">
                <h3 class="title">
                    <a href="product-details.html">
                        @basketVM.Title
                    </a>
                </h3>
                <p class="price"><span class="qty">@basketVM.Count ×</span> £@basketVM.Price</p>
                <a asp-action="removebasket" asp-controller="basket" asp-route-id="@basketVM.Id" class="cross-btn basketRemover"><i class="fas fa-times"></i></a>
            </div>
        </div>
    }
</div>
<div class=" single-cart-block ">
    <div class="btn-block">
        <a href="cart.html" class="btn">
            View Cart <i class="fas fa-chevron-right"></i>
        </a>
        <a asp-controller="basket" asp-action="index" class="btn btn--primary">
            Check Out <i class="fas fa-chevron-right"></i>
        </a>
    </div>
</div>